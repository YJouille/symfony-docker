<div id="flash_message_container">
    {% set frontFlashMessages = constant("App\\Helper\\ApiMessages::FRONT_MESSAGES") %}
    {% for type in ["success", "warning", "danger", "primary", "secondary", "info"] %}
        {% for id, flashMessage in app.session.flashbag.get(type) %}
            <div id="flash_message_{{ type }}_{{ id }}"
                    class="flash_message toast fade hide mt-3"
                    role="alert"
                    aria-live="assertive"
                    aria-atomic="true"
                    data-type="{{ type }}"
                    data-id="{{ id }}"
                    data-bs-autohide="true"
                    data-bs-delay="5000"
            >
                <div class="toast-header border-0 bg-{{ type }}">
                    <i class="fa-regular fa-bell"></i>
                    <span class="me-auto font-weight-bold">
                        {{ frontFlashMessages[type] }}
                    </span>
                    <i class="fas fa-times text-md ms-3 cursor-pointer" data-bs-dismiss="toast" aria-label="Close"></i>
                </div>
                <div class="toast-body">
                    {{ flashMessage|raw }}
                </div>
            </div>
        {% endfor %}
    {% endfor %}
</div>
