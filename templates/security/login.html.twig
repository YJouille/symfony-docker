{% extends "base.html.twig" %}

{% block title %}Connexion{% endblock %}
{% block stylesheets %}
{{ encore_entry_link_tags("login") }}
{% endblock %}
{% block javascripts %}
{{ encore_entry_script_tags("login") }}
{% endblock %}

{% block body %}
<section class="login-section">
    <form method="post">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />
        <div class="mb-4">
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail"
                autocomplete="off" required autofocus class="form-control" placeholder="Email"
                aria-label="Email" />
        </div>
        <div class="mb-4">
            <input type="password" name="password" id="inputPassword" autocomplete="current-password"
                required class="form-control" placeholder="Password" aria-label="Password" />
        </div>
        <div class="mb-4 form-check form-switch">
            <input class="form-check-input" type="checkbox" id="rememberMe" name="_remember_me"
                checked="checked" />
            <label class="form-check-label" for="rememberMe">Se souvenir de moi</label>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-custom">
                Connexion
            </button>
        </div>
    </form>
    <p class="text-center">
        <a href="#" id="forgottenPasswordBtn" data-token="{{ csrf_token('forgotten-password') }}">
            Mot de passe oublié ?
        </a>
    </p>
    <p class="text-center mt-2">
        <a href="{{ path('registration') }}">
            Créer un compte
        </a>
    </p>
</section>
{% endblock %}
