{% extends "base.html.twig" %}

{% block title %}Changement de votre mot de passe{% endblock %}
{% block stylesheets %}
{% endblock %}
{% block javascripts %}
{% endblock %}

{% block body %}
<section>
    <div class="container">
        <div class="card-custom">
            <div class="card-header-custom">
                <h2 class="card-title-custom">Changement de votre mot de passe</h2>
                <p>Saisissez votre nouveau mot de passe.</p>
                <p>{{ constant("App\\Entity\\User::PASSWORD_PATTERN_HELP") }}</p>
            </div>
            {{ form_start(form) }}
            <div class="card-body-custom">
                {{ form_row(form.password)}}
            </div>
            <div class="card-footer-custom">
                <p class="text-center">
                    {{ form_row(form.submit) }}
                </p>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</section>
{% endblock %}
